[module/spotify]
type = custom/script
interval = 1
format-prefix =
format = %{T6} ÔÄÅ %{T-} <label>
exec = python3 ~/.bin/scripts/polybar-spotify/spotify_status.py -f '{artist} - {song}'
format-underline = #1db954

